#include <iostream>
using namespace std;

int main() {
   int i;
   int s1, c, s2;
   int pascal_rc, pascal_r, pascal_c;
   int length;
   
   string space = " ";

    cout << "Enter pascal triangle length: ";
    cin >> length;
    
    
    for (i = 0; i <= length; i++)
    {
        pascal_r = i - 1;
        
        for (s1 = length; s1 > i; s1--)
        {
            cout << space;
        }
        
        cout << space;
        
        for (c = 0; c < i; c++)
        {
	    pascal_c = c;

            if (c == 0 || c == pascal_r)
            {
                pascal_rc = 1;
            }
            else
            {
                //pascal_rc = ;
		            //Left this part for now
            }
            
            cout << pascal_rc;
            cout << space;
        }
        
        for (s2 = length; s2 > i; s2--)
        {
            cout << space;
        }
        
        cout << endl;
    }

    return 0;
}
